{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "outDir": "lib",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true

  },
  "include": ["*.ts"]
}

